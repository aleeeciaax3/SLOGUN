<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.drake.slogun"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.GET_ACCOUNTS"></uses-permission>
	<uses-permission android:name="android.permission.USE_CREDENTIALS"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconslogun2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StartActivity"
        	android:noHistory="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CheckProfileExists"
            android:theme="@style/noAnimTheme"
            android:noHistory="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".CreateProfile"
            android:theme="@style/noAnimTheme"
            android:noHistory="true"
            android:windowSoftInputMode="stateVisible|adjustResize"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".All"
            android:theme="@style/noAnimTheme"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".DesMoines"
            android:theme="@style/noAnimTheme"
            android:label="@string/title_activity_des_moines"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".IowaCity"
            android:theme="@style/noAnimTheme"
            android:label="@string/title_activity_iowa_city"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".KansasCity"
            android:theme="@style/noAnimTheme"
            android:label="@string/title_activity_kansas_city"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Milwaukee"
            android:theme="@style/noAnimTheme"
            android:label="@string/title_activity_milwaukee"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".CedarRapids"
            android:theme="@style/noAnimTheme"
            android:label="@string/title_activity_cedar_rapids"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Chicago"
            android:theme="@style/noAnimTheme"
            android:label="@string/title_activity_chicago"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Ames"
            android:theme="@style/noAnimTheme"
            android:label="@string/title_activity_ames"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Omaha"
            android:theme="@style/noAnimTheme"
            android:label="@string/title_activity_omaha"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Midwest"
            android:theme="@style/noAnimTheme"
            android:label="@string/title_activity_midwest"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".CurrentEvents"
            android:theme="@style/noAnimTheme"
            android:label="@string/title_activity_current_events"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Miscellaneous"
            android:theme="@style/noAnimTheme"
            android:label="@string/title_activity_miscellaneous"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings"
            android:parentActivityName="edu.drake.slogun.All"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Add"
            android:label="@string/title_activity_add"
            android:parentActivityName="edu.drake.slogun.All"
            android:windowSoftInputMode="stateVisible|adjustResize"
            android:imeOptions="actionSend|flagNoEnterAction" >
        </activity>
        <activity
            android:name=".MyProfile"
            android:label="@string/title_activity_my_profile"
            android:parentActivityName="edu.drake.slogun.All" >
